<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculatorLayout" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#5870cb</item>
        <item name="colorPrimaryVariant">#8c9eff</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#5870cb</item>
        <item name="colorSecondaryVariant">#8c9eff</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Text View Style For all text views -->
        <item name="android:textViewStyle">@style/textViewLabel</item>
    </style>

    <!-- Text View Style -->

    <style name="textViewLabel" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">#5870cb</item>

    </style>

    <!-- Buttons Style -->

    <style name="funcBtnStyles" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">#8c9eff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="valueBtnStyles" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">#c0cfff</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="equalBtnStyles" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">#5870cb</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">100dp</item>
    </style>


</resources>